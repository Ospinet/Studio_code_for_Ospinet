<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   
    android:padding="0dp"
    android:orientation="horizontal"
    >
    
    <ImageView
        android:id="@+id/imgleft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:src="@drawable/pager_background_left" 
        android:layout_alignParentLeft="true"/>
    
    <LinearLayout
        android:id="@+id/pager_indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="@drawable/pager_background_strip"
        android:layout_toRightOf="@+id/imgleft" 
        android:orientation="horizontal"
        android:layout_alignTop="@+id/imgleft"
        android:layout_alignBottom="@+id/imgleft"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgleft"
        android:layout_alignBottom="@+id/imgleft"
        android:layout_toRightOf="@+id/pager_indicator_container"
        android:paddingTop="0dp"
        android:src="@drawable/pager_background_right" />
    
</RelativeLayout>