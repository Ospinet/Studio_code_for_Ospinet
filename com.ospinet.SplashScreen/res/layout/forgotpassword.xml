<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
<TextView 
    android:id="@+id/txtForgotPassword"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textColor="#969696"
    android:textSize="24sp"
    android:text="Forgot Password?"
    android:gravity="center"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:paddingTop="15dp" />

<TextView 
    android:id="@+id/txtEnterEmail"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textColor="#ff6f6f6f"
    android:textSize="14sp"
    android:text="Enter your e-mail address below to reset your password."
    android:gravity="center"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:layout_below="@+id/txtForgotPassword"
    android:layout_centerHorizontal="true" />

<EditText 
    android:id="@+id/edtEmail"
    android:layout_height="41dp"
    android:layout_width="fill_parent"
    android:layout_marginTop="20dp"
    android:paddingLeft="15dp"
     android:paddingTop="5dp"
        android:ems="10"
        android:background="@drawable/textbox"
        android:textColor="#000000"
        android:hint="Email"
        android:textSize="13sp"
        android:inputType="textEmailAddress"
    android:layout_below="@+id/txtEnterEmail"
    android:paddingRight="15dp"
    android:gravity="center"
    android:layout_alignLeft="@+id/txtEnterEmail"
    android:layout_alignRight="@+id/txtEnterEmail" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingBottom="10dp"
        android:layout_below="@+id/edtEmail"
        android:layout_marginTop="38dp"
        android:layout_alignLeft="@+id/txtEnterEmail"
        android:layout_alignRight="@+id/txtEnterEmail"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
 <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
     android:background="@drawable/button_custom_two"
        
     android:text="Submit"
        android:textColor="#FFFFFF"
     android:layout_alignParentTop="true"
     android:layout_alignParentLeft="true"
     android:layout_marginLeft="38dp"
     android:textStyle="bold"
     android:textSize="20dp"
     android:paddingBottom="7dp" />
   <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
       android:background="@drawable/button_custom"
       android:text="Cancel"
        android:textColor="#FFFFFF"
       android:layout_marginRight="41dp"
       android:layout_alignParentTop="true"
       android:layout_alignParentRight="true"
       android:textStyle="bold"
       android:textSize="20dp"
       android:paddingBottom="7dp" />
    </RelativeLayout>
</RelativeLayout>
