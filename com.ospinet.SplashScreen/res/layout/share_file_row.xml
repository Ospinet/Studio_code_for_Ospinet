<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lstselector"
    android:id="@+id/rel">
                    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lstselector" >
        <ImageView
            android:id="@+id/rightarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_row"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"
          />
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
          />
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="0dp"
          />
        <TextView
            android:id="@+id/txtTagId"
            android:layout_width="0dp"
            android:layout_height="0dp"
          />
        <TextView
            android:id="@+id/txtTagName"
            android:layout_width="0dp"
            android:layout_height="0dp"
          />
        <TextView
            android:id="@+id/txtFilename"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/txtId"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/txtMember_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/txtFile_Member_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        <TextView
            android:id="@+id/txtFile_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            />
        
        <TextView
            android:id="@+id/txtFile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:text="file_name"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="18dp">
        </TextView>

        <RelativeLayout
            android:id="@+id/txtOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:longClickable="true"
            android:layout_below="@+id/txtTitle"
            android:layout_toRightOf="@+id/txtTitle">

            <TextView
                android:id="@+id/txtFix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="File Owner :"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>

            <TextView
                android:id="@+id/txtFname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Fname"
                android:paddingTop="10dp"
                android:layout_toRightOf="@+id/txtFix"
                android:textColor="#000000"
                android:textSize="18dp">
            </TextView>

        <TextView
            android:id="@+id/txtLname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:text="Lname"
            android:paddingTop="10dp"
            android:layout_toRightOf="@+id/txtFname"
            android:textColor="#000000"
            android:textSize="18dp">
        </TextView>
    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>